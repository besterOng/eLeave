
@{
    Layout = "~/Views/Board/_BoardLayout.cshtml";
}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js" type="text/javascript"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js" type="text/javascript"></script>
<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="Stylesheet" type="text/css" />

    <main class="login-form" style="margin-top:10%">
        <div class="cotainer">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header" style="font-size:27px; text-align:center">Apply Leave</div>
                        <div class="card-body">
                            <form action="">
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-md-right">Absent/Leave Type</label>
                                    @*<div class="col-md-6">
                    <input type="email" id="email_address" class="form-control" name="email-address" required autofocus>
                </div>*@
                                    <select class="col-md-6" style="max-width:50%">
                                        <option value="">Select Your Leave Type</option>
                                        <option value="1">Annual Leave</option>
                                        <option value="2">Sick Leave</option>
                                        <option value="3">Full Day</option>
                                    </select>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-md-right">Reason</label>
                                    <div class="col-md-6">
                                        <textarea class="form-control" rows="3" required></textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-md-right" for="from">Start Date</label>
                                    <div class="col-md-6">
                                        <input class="form-control" id="from" name="from" type="text" autocomplete="off">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-md-right" for="to">End Data</label>
                                    <div class="col-md-6">
                                        <input class="form-control" id="to" name="to" type="text" autocomplete="off">
                                    </div>
                                </div>
                                <script>
                                var $j = jQuery.noConflict();                               
                                var dateToday = new Date();
                                var dates = $j("#from, #to").datepicker({
                                dateFormat: 'dd-mm-yy',
                                defaultDate: "dateToday",
                                changeMonth: true,
                                numberOfMonths: 1,
                                minDate: dateToday,
                                onSelect: function (selectedDate) {
                                var option = this.id == "from" ? "minDate" : "maxDate",
                                instance = $j(this).data("datepicker"),
                                date = $j.datepicker.parseDate(instance.settings.dateFormat || $j.datepicker._defaults.dateFormat, selectedDate, instance.settings);
                                dates.not(this).datepicker("option", option, date);
                                }
                                });</script>
                                <div class="col-md-6 offset-md-4">
                                    <button type="submit" class="btn btn-primary">
                                        Submit
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
