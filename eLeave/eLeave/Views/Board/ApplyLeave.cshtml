
@{
    Layout = "~/Views/Board/_BoardLayout.cshtml";
}
<script src="https://code.jquery.com/jquery-2.2.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<link href=”https://code.jquery.com/ui/1.11.3/themes/smoothness/jquery-ui.css” rel=”stylesheet”>
    <title>Login</title>

    <main class="login-form" style="margin-top:10%">
        <div class="cotainer">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header" style="font-size:27px; text-align:center">Apply Leave</div>
                        <div class="card-body">
                            <form action="">
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-md-right">Absent/Leave Type</label>
                                    @*<div class="col-md-6">
                    <input type="email" id="email_address" class="form-control" name="email-address" required autofocus>
                </div>*@
                                    <select class="col-md-6" style="max-width:50%">
                                        <option value="">Select Your Leave Type</option>
                                        <option value="1">Annual Leave</option>
                                        <option value="2">Sick Leave</option>
                                        <option value="3">Full Day</option>
                                    </select>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-md-right">Reason</label>
                                    <div class="col-md-6">
                                        <textarea class="form-control" rows="3" required></textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-md-right" for="from">Start Date</label>
                                    <div class="col-md-6">
                                        <input class="form-control" id="from" name="from" type="text">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-md-right" for="to">End Data</label>
                                    <div class="col-md-6">
                                        <input class="form-control" id="to" name="to" type="text">
                                    </div>
                                </div>
                                <script>
                                    
                                    var dateToday = new Date();
                                    var dates = $("#from, #to").datepicker({
                                        defaultDate: dateToday,
                                        changeMonth: true,
                                        numberOfMonths: 1,
                                        minDate: dateToday,
                                        onSelect: function (selectedDate) {
                                            var option = this.id == "from" ? "minDate" : "maxDate",
                                                instance = $(this).data("datepicker"),
                                                date = $.datepicker.parseDate(instance.settings.dateFormat || $.datepicker._defaults.dateFormat, selectedDate, instance.settings);
                                            dates.not(this).datepicker("option", option, date);
                                        }
                                    });
                                </script>
                                <div class="col-md-6 offset-md-4">
                                    <button type="submit" class="btn btn-primary">
                                        Submit
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>

    </main>
